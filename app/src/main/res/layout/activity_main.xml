<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="Its time to show your might!!."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        app:srcCompat="@drawable/castlevscastle" />

    <ImageView
        android:id="@+id/player_one"
        android:layout_width="155dp"
        android:layout_height="131dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_image"
        app:srcCompat="@drawable/infantry" />

    <ImageView
        android:id="@+id/player_one_win"
        android:layout_width="155dp"
        android:layout_height="131dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_one"
        app:srcCompat="@drawable/youwin"
        android:visibility="invisible"/>



    <ImageView
        android:id="@+id/versus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/header_image"
        app:srcCompat="@drawable/vs" />


    <ImageView
        android:id="@+id/player_two_win"
        android:layout_width="155dp"
        android:layout_height="131dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_two"
        app:srcCompat="@drawable/youwin"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/player_two"
        android:layout_width="155dp"
        android:layout_height="131dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_image"
        app:srcCompat="@drawable/cavalry" />

    <Button
        android:id="@+id/btn_player_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlayerOne"
        android:background="#FCFCFC"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/player_one"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/btn_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlayerTwo"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/player_two"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btn_battle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Battle"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>